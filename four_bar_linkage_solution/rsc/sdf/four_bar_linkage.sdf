<sdf version='1.7'>
    <plugin name="gazebo_ros_state" filename="libgazebo_ros_state.so">
      <ros>
        <namespace>/demo</namespace>
        <argument>model_states:=model_states_demo</argument>
        <argument>link_states:=link_states_demo</argument>
      </ros>
      <alwaysOn>1</alwaysOn>
      <update_rate>100</update_rate>
    </plugin>


    <state_interface name="position">
      <param name="initial_value">1.0</param>
    </state_interface>

  <model name='four_bar_linkage'>
    <joint name='first_joint' type='revolute'>
      <pose relative_to='__model__'>0 0 0.0 0 0 0</pose>
      <parent>world</parent>
      <child>link1</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <upper>Inf</upper>
          <lower>-Inf</lower>
        </limit>
      </axis>
    </joint>

    <link name='link1'>
      <pose relative_to='first_joint'>0 0 0 1.578 0 0</pose>
      <inertial>
        <pose>0 0.5 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>0.0833333</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name='base_visual'>
        <pose>0 0.5 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 1 0.2</size>
          </box>
        </geometry>
      </visual>
    </link>

    <joint name='second_joint' type='revolute'>
      <pose relative_to='link1'>0 1 0 -1.578 0 0</pose>
      <parent>link1</parent>
      <child>link2</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <upper>Inf</upper>
          <lower>-Inf</lower>
        </limit>
      </axis>
    </joint>

    <link name='link2'>
      <pose relative_to='second_joint'>0 0 0 0.3533 0 0</pose>
      <inertial>
        <pose>0 2.0 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>1.33333</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name='base_visual'>
        <pose>0 2.0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 4 0.2</size>
          </box>
        </geometry>
      </visual>
    </link>

    <joint name='third_joint' type='revolute'>
      <pose relative_to='link2'>0 4 0 -0.3533 0 0</pose>
      <parent>link2</parent>
      <child>link3</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <upper>Inf</upper>
          <lower>-Inf</lower>
        </limit>
      </axis>
    </joint>

    <link name='link3'>
      <pose relative_to='third_joint'>0 0 0 -1.8767 0 0</pose>
      <inertial>
        <pose>0 1.25 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>0.5208</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name='base_visual'>
        <pose>0 1.25 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 2.5 0.2</size>
          </box>
        </geometry>
      </visual>
    </link>

    <joint name='fourth_joint' type='revolute'>
      <pose relative_to='__model__'>0 3.0 0 0 0 0</pose>
      <parent>world</parent>
      <child>link3</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <upper>Inf</upper>
          <lower>-Inf</lower>
        </limit>
      </axis>
    </joint>
    <plugin name='joint_state_publisher' filename='libgazebo_ros_joint_state_publisher.so'>
      <joint_name>first_joint</joint_name>
      <joint_name>second_joint</joint_name>
      <joint_name>third_joint</joint_name>
      <joint_name>fourth_joint</joint_name>
      <updateRate>100.0</updateRate>
      <alwaysOn>1</alwaysOn>
      <ros>
        <namespace>/joints</namespace>
        <remapping>joint_states:=joint_states_demo</remapping>
      </ros>
    </plugin>
  </model>

</sdf>